<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/finder_layout"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	tools:context=".PhotoMenu" >

	<Button
		android:id="@+id/finder_btn_find"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="8.0px"
		android:text="@string/finder_btn_find" />

	<TextView
		android:id="@+id/finder_txt_find"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="8.0px"
		android:textSize="24sp" />

	<Button
		android:id="@+id/finder_btn_clear"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="8.0px"
		android:text="@string/finder_btn_clear" />

</LinearLayout>
